<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:gravity="right"
    >

    <LinearLayout
            android:id="@+id/v1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:background="@drawable/chat_bubble_green"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/pad_5dp"
            android:paddingLeft="@dimen/pad_15dp"
            android:paddingRight="@dimen/pad_chat_item"
            android:paddingTop="@dimen/pad_5dp" >

        <TextView
                android:id="@+id/messge_rcv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="@dimen/txt_13sp"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:id="@+id/message_rcv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:maxLines="4"/>

    </LinearLayout>

        <TextView
            android:id="@+id/is_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seen"
            android:textSize="@dimen/txt_14sp"
            android:layout_alignRight="@+id/v1"
            android:layout_below="@+id/v1"
            android:layout_marginTop="@dimen/pad_5dp"
            android:layout_marginRight="@dimen/pad_20dp"
            />
</LinearLayout>
