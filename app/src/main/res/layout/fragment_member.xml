<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="100"
    android:gravity="center_vertical">
    <LinearLayout android:id="@+id/linearInfoGenerale" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:background="@color/colorPartieInformationTextEditProfil"
        android:weightSum="100"
        android:layout_weight="80">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/age_lay"
            android:layout_weight="10"
            android:layout_gravity="center|right"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textColor="@color/colorTextEditProfil1"
                android:textSize="18dip"
                android:layout_weight="10"
                android:layout_gravity="center|left" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textColor="@color/colorTextEditProfil2"
                android:textSize="18dip"
                android:layout_weight="10"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_lay"
            android:layout_weight="10"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|right">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/colorTextEditProfil1"
                android:textSize="18dip"
                android:layout_weight="10" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/colorTextEditProfil2"
                android:textSize="18dip"
                android:layout_weight="10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_lay"
            android:layout_weight="10"
            android:weightSum="10"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Location"
                android:textColor="@color/colorTextEditProfil1"
                android:textSize="18dip"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Location"
                android:textColor="@color/colorTextEditProfil2"
                android:textSize="18dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/languages_lay"
            android:layout_weight="10"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Language"
                android:textColor="@color/colorTextEditProfil1"
                android:textSize="18dip"
                android:layout_weight="5" />

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Language"
                android:textColor="@color/colorTextEditProfil2"
                android:textSize="18dip"
                android:layout_weight="5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_lay"
            android:layout_weight="60"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|right"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chessprofil"
                android:textColor="@color/colorTextEditProfil1"
                android:textSize="18dip"
                android:layout_weight="5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_lay_vertical"
                android:gravity="right">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/profile_title_lay"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/player"
                        android:textColor="@color/colorTextEditProfil2"
                        android:textSize="18dip"
                        android:id="@+id/player_p"
                        android:layout_gravity="center" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/arbitre"
                        android:textColor="@color/colorTextEditProfil2"
                        android:textSize="18dip"
                        android:id="@+id/arbitre_p"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trainer"
                        android:textColor="@color/colorTextEditProfil2"
                        android:textSize="18dip"
                        android:id="@+id/trainer_p"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer"
                        android:textColor="@color/colorTextEditProfil2"
                        android:textSize="18dip"
                        android:id="@+id/organizer_p"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/checked_lay"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checked_arbiter"
                        android:src="@drawable/empty_round"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checked_player"
                        android:src="@drawable/empty_round"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checked_trainer"
                        android:src="@drawable/empty_round"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checked_oranizer"
                        android:src="@drawable/empty_round"
                        android:layout_gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/profile_details_lay"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/player_details"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/arbiter_details"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/trainer_details"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/organizer_details"
                        android:layout_weight="1"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

