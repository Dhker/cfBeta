<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    tools:context="com.fide.ae.chessfamilybeta.DashboardActivity"
    style="@style/AppTheme"
    android:background="#E1E1E1"


    android:orientation="vertical">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.fide.ae.chessfamilybeta.Top_menu_fragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_top_menu" />

    <LinearLayout
        android:background="@color/DarkBrown"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:paddingBottom="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_menu_btn"
            android:layout_weight="25"
            android:src="@drawable/ic_home_menu"
            android:background="@color/DarkBrown"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorite_menu_btn"
            android:layout_weight="25"
            android:src="@drawable/ic_favorite_menu"
            android:background="@color/DarkBrown"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_menu_btn"
            android:layout_weight="25"
            android:src="@drawable/ic_message_menu"
            android:background="@color/DarkBrown"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_menu_btn"
            android:layout_weight="25"
            android:src="@drawable/ic_notification"
            android:background="@color/DarkBrown"
            android:clickable="true" />
    </LinearLayout>


</LinearLayout>
