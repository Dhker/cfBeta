<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/say_somthing"
        android:background="@xml/shaded_border"
        android:layout_margin="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/member_photo"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"

            android:id="@+id/pub_text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/say_somthing"
            android:layout_toEndOf="@+id/say_somthing"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="90dp"
            android:hint="@string/pulication"
            android:layout_marginRight="20dp" />




    </LinearLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.fide.ae.chessfamilybeta.Bottom_Menu_Fragment"
        android:id="@+id/fragment3"
        class="com.fide.ae.chessfamilybeta.Bottom_Menu_Fragment"
        tools:layout="@layout/fragment_bottom__menu" />


</LinearLayout>